{
  "name": "mmg-wasm",
  "version": "0.0.1",
  "description": "WebAssembly bindings for the mmg mesh remeshing library",
  "type": "module",
  "main": "dist/mmg.js",
  "types": "dist/mmg.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "./scripts/build.sh",
    "build:debug": "./scripts/build.sh Debug",
    "build:docker": "docker build -t mmg-wasm-builder . && docker run --rm -v \"$PWD/build:/app/build\" mmg-wasm-builder",
    "clean": "rm -rf build dist",
    "toolchain:check": "./scripts/check-toolchain.sh",
    "toolchain:setup": "./scripts/setup-emsdk.sh",
    "test": "echo 'TODO: Add tests'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmarchais/mmg-wasm.git"
  },
  "keywords": [
    "mmg",
    "mesh",
    "remeshing",
    "wasm",
    "webassembly",
    "3d"
  ],
  "author": "Kevin Marchais",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/kmarchais/mmg-wasm/issues"
  },
  "homepage": "https://github.com/kmarchais/mmg-wasm#readme"
}
